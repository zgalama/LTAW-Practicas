<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tienda [
    <!ELEMENT tienda (producto+)> <!--Se debe poner que etiqueta va a contener dentro, y así sucesivamente
    con las demás. Se añade '+' al final para indicar 1 o más productos-->
    <!ELEMENT producto (#PCDATA)>
]>
<tienda>
    <producto>
        Esto es un producto
    </producto>
    <producto>
        Otro producto
    </producto>

</tienda>